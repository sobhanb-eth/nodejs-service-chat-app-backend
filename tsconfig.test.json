{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/__tests__/**/*",
    "src/test-setup.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
