{
  "name": "nodejs-realtime-service",
  "version": "1.0.0",
  "description": "Real-time messaging service with Socket.io for secure group chat application",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx tsc --project tsconfig.json",
    "build:explicit": "npx tsc --project ./tsconfig.json --outDir ./dist --rootDir ./src",
    "build:clean": "rimraf dist && npm run build",
    "start": "node dist/index.js",
    "start:azure": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon --exec ts-node src/index.ts",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --passWithNoTests --ci --coverage",
    "test:watch": "jest --watch --passWithNoTests",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prestart": "npm run build"
  },
  "keywords": [
    "nodejs",
    "socket.io",
    "real-time",
    "messaging",
    "websocket",
    "mongodb",
    "jwt",
    "clerk"
  ],
  "author": "Sobhan (Ryan) Bahrami",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "@boundaryml/baml": "^0.71.0",
    "@clerk/clerk-sdk-node": "^4.13.23",
    "@langchain/community": "^0.3.15",
    "@langchain/core": "^0.3.57",
    "@langchain/langgraph": "^0.2.73",
    "@langchain/mongodb": "^0.1.0",
    "@langchain/openai": "^0.3.14",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "openai": "^4.24.1",
    "rimraf": "^5.0.5",
    "sharp": "^0.33.1",
    "socket.io": "^4.7.5",
    "typescript": "^5.3.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/sharp": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
